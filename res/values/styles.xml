<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TextStyle" parent="AppBaseTheme">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name="TextStyle_Largest" parent="TextStyle">
        <item name="android:textSize">42dp</item>
    </style>
    
	<style name="TextStyle_Larger" parent="TextStyle">
        <item name="android:textSize">25dp</item>
    </style>
     <style name="TextStyle_Large" parent="TextStyle">
        <item name="android:textSize">22dp</item>
    </style>
    
     <style name="TextStyle_Medium" parent="TextStyle">
        <item name="android:textSize">20dp</item>
    </style>
    
     <style name="TextStyle_Small" parent="TextStyle">
        <item name="android:textSize">18dp</item>
    </style>
    
    <style name="TextStyle_Smaller" parent="TextStyle">
        <item name="android:textSize">16dp</item>
    </style>
    
    <style name="TextStyle_Smallest" parent="TextStyle">
        <item name="android:textSize">14dp</item>
    </style>
    
    <style name = "style_atob" >
        <item name = "android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name = "android:activityCloseEnterAnimation">@anim/push_right_in</item>
    </style>
    
    <style name = "style_bbacka" >
        <item name = "android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name = "android:activityCloseExitAnimation">@anim/push_right_out</item>
    </style>
    
    <style name="theme_home_screen" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">  
       <item name="android:windowAnimationStyle">@style/style_atob</item>  
       <item name="android:windowNoTitle">true</item>  
       <item name="android:windowFullscreen">true</item>
       <item name="android:windowContentOverlay">@null</item>
   </style>  
   
   <style name="theme_map_screen" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">  
       <item name="android:windowAnimationStyle">@style/style_bbacka</item>  
       <item name="android:windowNoTitle">true</item>  
       <item name="android:windowFullscreen">true</item>
       <item name="android:windowContentOverlay">@null</item>
   </style>  
     
</resources>
