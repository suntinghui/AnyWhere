<?xml version="1.0" encoding="utf-8"?>

    
 <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:orientation="horizontal" >
    
    <TextView
        android:id          = "@+id/view_share_drive_record"
       	android:layout_width="wrap_content"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:singleLine   = "true"
    	android:gravity      = "center"
    	android:textAppearance="@style/TextStyle_Large"
    	android:background="@color/color_grey"
    	android:text         = "@string/str_share_history_record"/>
    
    
    <TextView
        android:id          = "@+id/view_delete_drive_record"
       	android:layout_width="wrap_content"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:singleLine   = "true"
    	android:gravity      = "center"
    	android:textAppearance="@style/TextStyle_Large"
    	android:background="@color/color_red"
    	android:text         = "@string/str_delete_history_record"/>
</LinearLayout>

