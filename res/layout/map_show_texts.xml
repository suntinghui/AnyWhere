<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation  = "vertical"
    android:background="@drawable/bg_translucent" >
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft = "15dip"
	    android:layout_marginRight = "15dip"
	    android:orientation  = "vertical"
	    android:layout_gravity = "center"
	    android:background="@drawable/bg_show_texts" >
	    
		<TextView
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:gravity = "center"
	    	android:padding      = "5dip"
	    	android:textAppearance="@style/TextStyle_Large"
	    	android:textColor="@color/color_black"
	    	android:text    = "@string/str_title_comment_texts"/>
	    
	    <TextView
	        android:layout_width="match_parent"
	    	android:layout_height="2dip"
	    	android:layout_marginLeft = "15dip"
	    	android:layout_marginRight = "15dip"
	    	android:background="@color/color_grey"/>
	    
	    <TextView
	        android:id         = "@+id/view_show_texts"
	        android:layout_width="match_parent"
	    	android:layout_height="120dip"
	    	android:padding      = "12dip"
	    	android:textAppearance="@style/TextStyle_Medium"
	    	android:textColor="@color/color_black"
	    	android:layout_gravity = "center"/>
	    
	</LinearLayout>
    
</FrameLayout>