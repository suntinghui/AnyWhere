<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout 
        android:id="@+id/frontview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop = "15dip"
    android:background = "@drawable/bg_list_item" >
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft  = "10dip"
    	android:paddingRight = "10dip"
    	android:orientation="horizontal">
	    
		<!-- 温度和日期 -->
	    <FrameLayout
	        android:layout_width="wrap_content"
	    	android:layout_height="match_parent"
	    	android:layout_gravity = "center"
	    	android:layout_weight="2"
	    	android:orientation="vertical">
	        
	        <TextView 
	            android:id         = "@+id/view_temp"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:singleLine    = "true"
	    		android:layout_gravity = "top|center_horizontal"
	    		android:textAppearance="@style/TextStyle_Largest"
	    		android:text         = "17"/>
	        
	        <TextView 
	            android:id         = "@+id/view_date"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity = "bottom"
	    		android:paddingTop     = "12dip"
	    		android:textAppearance="@style/TextStyle_Smaller"
	    		android:singleLine    = "true"
	    		android:text         = "2014/03/05"/>
	    </FrameLayout>
	    
	    	<!-- 图标和星期 -->
	    <FrameLayout
	        android:layout_width="wrap_content"
	    	android:layout_height="match_parent"
	    	android:layout_gravity = "center"
	    	android:layout_weight="1"
	    	android:orientation="vertical">
	        
	        <ImageView 
	            android:id         = "@+id/view_weather_icon"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity = "top"
	    		android:src         ="@drawable/img_weather_1"/>
	        
	        <TextView 
	            android:id         = "@+id/view_weekday"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity = "bottom|center_horizontal"
	    		android:textAppearance="@style/TextStyle_Small"
	    		android:paddingTop     = "12dip"
	    		android:singleLine    = "true"
	    		android:text         = "星期二"/>
	    </FrameLayout>
	    
	    <!-- 风车 -->
	     <ImageView 
	            android:id         = "@+id/view_windmill"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_weight="1"
	    		android:layout_gravity = "bottom"
	    		android:scaleType   = "fitCenter"
	    		android:background="@drawable/fc0001"/>
	     
	    <!--风向和速度-->
	    <FrameLayout
	        android:layout_width="wrap_content"
	    	android:layout_height="match_parent"
	    	android:layout_weight="1"
	    	android:layout_gravity = "center">
	        
	        <TextView 
	            android:id         = "@+id/view_wind_dir"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity = "center"
	    		android:textAppearance="@style/TextStyle_Small"
	    		android:textStyle="bold"
	    		android:singleLine    = "true"
	    		android:text         = "西北"/>
	        
	        <TextView 
	            android:id         = "@+id/view_wind_speed"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity = "bottom"
	    		android:textAppearance="@style/TextStyle_Small"
	    		android:paddingTop     = "18dip"
	    		android:singleLine    = "true"
	    		android:text         = "0.0004km/h"/>
	    </FrameLayout>
    </LinearLayout>
    
    <ImageView 
        android:id         = "@+id/view_go_drive"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity = "center"
	    android:src          = "@drawable/selector_go_drive"
	    android:layout_marginTop = "20dip"
	    android:layout_marginBottom = "20dip"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/backview"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"></LinearLayout>
</FrameLayout>
