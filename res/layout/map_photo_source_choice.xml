<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="vertical" >

        
        <Button
            android:id="@+id/view_choice_take_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="@string/str_choice_take_photo"
            android:textColor="@android:color/holo_blue_light" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/view_choice_from_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="@string/str_choice_take_from_gallery"
            android:textColor="@android:color/holo_blue_light" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/view_choice_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:background="@android:color/white"
            android:text="@string/str_button_cancel"
            android:textColor="@android:color/holo_blue_light" />
    </LinearLayout>

</RelativeLayout>