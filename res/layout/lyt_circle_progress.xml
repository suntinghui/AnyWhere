<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundProgress="http://schemas.android.com/apk/res/com.lookstudio.anywhere"
   	android:layout_width="wrap_content"  
	android:layout_height="wrap_content">
    
    <com.lookstudio.anywhere.view.CircleProgress
		android:id   = "@+id/view_circle_progress"
		android:layout_width="wrap_content"  
		android:layout_height="wrap_content"
		android:background="@drawable/img_play_normal"   
		roundProgress:max="100"
		roundProgress:fill = "false"    
		roundProgress:Inside_Interval="5"
		roundProgress:Paint_Width = "4"
		roundProgress:Paint_Color = "0xff0000ff"/>
</LinearLayout>



