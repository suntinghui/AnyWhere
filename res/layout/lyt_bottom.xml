<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/group_edit_text"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	    
        <!-- 发表区 -->
	    <RelativeLayout
	        android:id          = "@+id/group_prepare_comment"
	        android:layout_width="match_parent"
	        android:layout_height="70dip"
	        android:layout_gravity="bottom"
	        android:background="@android:color/white"
	        android:orientation="horizontal"
	        android:visibility="gone" >
	
	        <ImageView
	            android:id="@+id/view_go_record_voice"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft = "10dip"
	            android:src="@drawable/selector_go_record"
	            android:visibility="visible" />
	
	        <ImageView
	            android:id="@+id/view_go_take_photo"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dip"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@id/view_go_record_voice"
	            android:src="@drawable/selector_go_take_photo"
	            android:visibility="visible" />
	
	        <EditText
	            android:id="@+id/view_message_input"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:singleLine   = "false"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@id/view_go_take_photo"
				android:layout_toLeftOf="@+id/view_do_send"
	            android:visibility="visible" />
	
	        <Button
	            android:id="@+id/view_do_send"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	             android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:text="@string/str_send_comment" />
	    </RelativeLayout>
	    
		<FrameLayout
	        android:id="@+id/map_record_erea"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/bg_photo_radio"
	        android:visibility="gone" >
	    </FrameLayout>
    </LinearLayout>
    

    <!-- 控制区-->
    <RelativeLayout
        android:id="@+id/group_control_panel"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:layout_gravity="bottom"
        android:background="@drawable/map_toolbar_back_groud" >


        <ImageView
            android:id="@+id/map_start_or_end"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/map_start"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/map_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="30dip"
            android:src="@drawable/map_location_drawable"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/map_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="30dip"
            android:src="@drawable/map_record"
            android:visibility="visible" />
    </RelativeLayout>

</LinearLayout>